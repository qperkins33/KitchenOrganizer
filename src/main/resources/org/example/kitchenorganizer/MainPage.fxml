<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox fx:controller="org.example.kitchenorganizer.mainpage.MainPageController" xmlns:fx="http://javafx.com/fxml">
    <BorderPane>
        <stylesheets>
            <URL value="@MainPage.css" />
        </stylesheets>

        <top>
            <VBox>
                <HBox alignment="CENTER_LEFT" styleClass="menuContainer">
                    <StackPane styleClass="appTitleContainer">
                        <Text fx:id="appTitle" styleClass="appTitle" text="Kitchen Organizer"/>
                    </StackPane>
                    <TextField fx:id="searchBar" HBox.hgrow="ALWAYS" promptText="Search..." />
                    <Button text="Search" onAction="#handleSearch"></Button>
<!--                    <Button text="Logout" onAction="#handleLogout" HBox.hgrow="NEVER" />-->
                    <Button text="Settings" onAction="#showSettingsDialog" HBox.hgrow="NEVER" />
                </HBox>

                <HBox alignment="CENTER_LEFT" styleClass="menuContainer2">
                    <StackPane styleClass="appTitleContainer">
                        <Text text="Select Kitchen Collection: "/>
                    </StackPane>

                    <ComboBox fx:id="kitchenSelectorComboBox" onAction="#handleKitchenSelectionComboBox"/>
                    <Button text="Add New Collection" onAction="#showAddCollectionDialog" HBox.hgrow="NEVER"/>
                    <Button text="Remove Collection" onAction="#showRemoveCollectionDialog" HBox.hgrow="NEVER"/>

                    <Pane HBox.hgrow="ALWAYS"/>

                    <StackPane styleClass="appTitleContainer">
                        <Text text="Sort By: "/>
                    </StackPane>
                    <ComboBox fx:id="sortBy" onAction="#sort">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
<!--                                TODO: Code a method to sort displayed foods from database-->
                                <String fx:value="Name"/>
                                <String fx:value="Expiration"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                </HBox>
            </VBox>
        </top>

        <center>
<!--            Scrollable-->
            <ScrollPane fitToWidth="true" fitToHeight="true" pannable="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" prefWidth="900" prefHeight="625">
                <VBox fx:id="foodsCenterVBox" alignment="TOP_CENTER" ></VBox>
            </ScrollPane>
        </center>

        <bottom>
            <HBox alignment="CENTER_LEFT">
                <HBox>
                    <Label text=" User's Name: "/>
                    <Text fx:id="userName" />
                </HBox>

                <Pane HBox.hgrow="ALWAYS"/>

                <Button text="Add New Item" onAction="#showAddNewItemDialog" HBox.hgrow="NEVER"/>
                <Separator orientation="VERTICAL" HBox.hgrow="ALWAYS"/>
                <Button text="Check Current Collection's Inventory" onAction="#showCheckCurrentInventoryDialog" HBox.hgrow="NEVER"/>
                <Button text="Check All Inventory" onAction="#showCheckAllInventoryDialog" HBox.hgrow="NEVER"/>
                <Separator orientation="VERTICAL" HBox.hgrow="ALWAYS"/>
<!--                TODO: incrementPageNum and decrementPageNum do not properly change page. Either fix or delete.-->
                <Button text="Previous Page" onAction="#previousPage" HBox.hgrow="NEVER"/>
                <Button text="Next Page" onAction="#nextPage" HBox.hgrow="NEVER"/>
            </HBox>

        </bottom>
    </BorderPane>
</VBox>
